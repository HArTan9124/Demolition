<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D0D0D">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="22dp">

        <!-- Top Progress -->
        <ProgressBar
            android:id="@+id/progressbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:progress="68"
            android:max="100"
            android:progressTint="#00FFD9"
            android:backgroundTint="#222222"
            android:layout_marginBottom="26dp" />

        <!-- Header -->
        <TextView
            android:id="@+id/fullscreen_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸŽ¤ Choose Your AI Voice"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/spacemono"
            android:shadowColor="#00FFD9"
            android:shadowRadius="18"
            android:layout_marginBottom="16dp" />

        <!-- Glassmorphic Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical"
            android:background="@drawable/glass_bg"
            android:elevation="12dp">

            <!-- AI Avatar -->
            <ImageView
                android:id="@+id/aiAvatar"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/avatar1"
                android:scaleType="centerCrop"
                android:background="@drawable/avatar_selector"
                android:clipToOutline="true"
                android:elevation="14dp"
                android:layout_gravity="center"
                android:layout_marginBottom="22dp" />

            <!-- "Select Voice Style" -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŽ§ Voice Style"
                android:textColor="#00FFD9"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/spacemono" />

            <!-- Spinner -->
            <Spinner
                android:id="@+id/languageSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_neon"
                android:popupBackground="@color/black"
                android:padding="14dp"
                android:layout_marginBottom="22dp" />

            <!-- Input Box -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="#00FFD9"
                app:boxStrokeWidth="2dp"
                app:hintTextColor="@color/white"
                android:hint="ðŸ’¬ Type message for AI"
                android:layout_marginBottom="22dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextSpeechInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#CCCCCC"
                    android:textSize="17sp"
                    android:padding="12dp"
                    android:fontFamily="@font/spacemono" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Speak Button -->
            <Button
                android:id="@+id/dummy_button"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="ðŸ”Š Generate Voice"
                android:textColor="#000000"
                android:textSize="18sp"
                android:background="@drawable/btn_cyber"
                android:fontFamily="@font/spacemono"
                android:layout_marginBottom="20dp" />

            <!-- Speak Progress -->
            <ProgressBar
                android:id="@+id/speakProgress"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:indeterminate="true"
                android:visibility="gone"
                android:progressTint="#00FFD9"
                android:backgroundTint="#333333"
                android:layout_marginBottom="26dp" />

            <!-- Next Button -->
            <Button
                android:id="@+id/btnNext"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="âž¡ï¸ Continue"
                android:textSize="18sp"
                android:background="@drawable/btn_next"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/spacemono" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
