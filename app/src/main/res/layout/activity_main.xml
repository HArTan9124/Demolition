<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_main_root"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:id="@+id/ll_user_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/iv_user_profile"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/user"
                    android:padding="4dp"
                    android:layout_weight="0.15"/>

                <LinearLayout
                    android:id="@+id/ll_user_text"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_weight="0.7"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp">

                    <TextView
                        android:id="@+id/tv_welcome_back"
                        android:text="Welcome back,"
                        android:textSize="16sp"
                        android:textColor="#888888"
                        android:fontFamily="@font/space"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tv_username"
                        android:text="Username!"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/audi"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/notification"
                    android:layout_gravity="end"
                    android:layout_weight="0.3"
                    android:padding="0dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/card_continue_learning"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/rounded_blue_card"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/tv_continue_title"
                    android:text="Science - Chapter 3"
                    android:textSize="15sp"
                    android:fontFamily="@font/space"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_continue_subtitle"
                    android:text="The Solar System"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/spacemono"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ProgressBar
                    android:id="@+id/progress_course"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="14dp"
                    android:progress="60"
                    android:max="100"
                    android:progressDrawable="@drawable/progress_bar_blue" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_courses_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_my_courses"
                    android:text="My Courses"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/audi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tv_see_all"
                    android:text="See All"
                    android:textSize="14sp"
                    android:fontFamily="@font/space"
                    android:textColor="#4285F4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_courses_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <!-- Row 1 -->
                <LinearLayout
                    android:id="@+id/ll_course_row_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:weightSum="2"
                    android:layout_marginTop="10dp">

                    <!-- Mathematics -->
                    <LinearLayout
                        android:id="@+id/card_math"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/course_card"
                        android:layout_marginRight="8dp">

                        <ImageView
                            android:id="@+id/iv_math"
                            android:src="@drawable/math"
                            android:layout_width="40dp"
                            android:layout_height="40dp"/>

                        <TextView
                            android:id="@+id/tv_math_title"
                            android:text="Mathematics"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/audi"
                            android:layout_marginTop="6dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/tv_math_lessons"
                            android:text="12 Lessons"
                            android:textSize="12sp"
                            android:fontFamily="@font/audi"
                            android:layout_marginTop="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <!-- Science -->
                    <LinearLayout
                        android:id="@+id/card_science"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/course_card"
                        android:layout_marginLeft="8dp">

                        <ImageView
                            android:id="@+id/iv_science"
                            android:src="@drawable/science"
                            android:layout_width="40dp"
                            android:layout_height="40dp"/>

                        <TextView
                            android:id="@+id/tv_science_title"
                            android:text="Science"

                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/audi"
                            android:layout_marginTop="6dp"/>

                        <TextView
                            android:id="@+id/tv_science_lessons"
                            android:text="15 Lessons"

                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textSize="12sp"
                            android:fontFamily="@font/audi"
                            android:layout_marginTop="2dp"/>
                    </LinearLayout>

                </LinearLayout>


                <!-- Row 2 -->
                <LinearLayout
                    android:id="@+id/ll_course_row_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:weightSum="2"
                    android:layout_marginTop="10dp">

                    <!-- Geography -->
                    <LinearLayout
                        android:id="@+id/card_geo"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/course_card"
                        android:layout_marginRight="8dp">

                        <ImageView
                            android:id="@+id/iv_geo"
                            android:src="@drawable/geo"
                            android:layout_width="40dp"
                            android:layout_height="40dp"/>

                        <TextView
                            android:id="@+id/tv_geo_title"
                            android:text="Geography"
                            android:textSize="15sp"

                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textStyle="bold"
                            android:fontFamily="@font/audi"
                            android:layout_marginTop="6dp"/>

                        <TextView
                            android:id="@+id/tv_geo_lessons"
                            android:text="8 Lessons"

                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textSize="12sp"
                            android:fontFamily="@font/audi"
                            android:layout_marginTop="2dp"/>
                    </LinearLayout>

                    <!-- History -->
                    <LinearLayout
                        android:id="@+id/card_history"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/course_card"
                        android:layout_marginLeft="8dp">

                        <ImageView
                            android:id="@+id/iv_history"
                            android:src="@drawable/history"
                            android:layout_width="40dp"
                            android:layout_height="40dp"/>

                        <TextView
                            android:id="@+id/tv_history_title"
                            android:text="History"

                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/audi"
                            android:layout_marginTop="6dp"/>

                        <TextView

                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:id="@+id/tv_history_lessons"
                            android:text="10 Lessons"
                            android:textSize="12sp"
                            android:fontFamily="@font/audi"
                            android:layout_marginTop="2dp"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Today's Schedule"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/audi"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bottom_nav_bg"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="5dp"/>
                    
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Time Table"
                            android:textSize="25sp"
                            android:fontFamily="@font/space"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Time"
                            android:textSize="18sp"/>
                    </LinearLayout>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="join"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bottom_nav_bg"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="5dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Time Table"
                            android:textSize="25sp"
                            android:fontFamily="@font/space"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Time"
                            android:textSize="18sp"/>
                    </LinearLayout>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="join"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pending Work"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/space"
                    />
            </LinearLayout>



        </LinearLayout>
    </ScrollView>



    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/bottom_nav_bg"
        android:padding="6dp"
        android:weightSum="4">

        <LinearLayout
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/nav_home_icon"
                android:src="@drawable/home"
                android:layout_width="24dp"
                android:layout_height="24dp"/>

            <TextView
                android:id="@+id/nav_home_text"
                android:text="Home"
                android:textSize="12sp"

                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:fontFamily="@font/space"
                android:textColor="#000000"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_courses"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/nav_courses_icon"
                android:src="@drawable/course"
                android:layout_width="24dp"
                android:layout_height="24dp"/>

            <TextView
                android:id="@+id/nav_courses_text"
                android:text="Courses"

                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:fontFamily="@font/space"
                android:textColor="#8A8A8A"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_progress"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/nav_progress_icon"
                android:src="@drawable/progress"
                android:layout_width="24dp"
                android:layout_height="24dp"/>

            <TextView
                android:id="@+id/nav_progress_text"
                android:text="Progress"
                android:textSize="12sp"

                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:fontFamily="@font/space"
                android:textColor="#8A8A8A"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_profile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/nav_profile_icon"
                android:src="@drawable/user"
                android:layout_width="24dp"
                android:layout_height="24dp"/>

            <TextView
                android:id="@+id/nav_profile_text"
                android:text="Profile"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"

                android:textSize="12sp"
                android:fontFamily="@font/space"
                android:textColor="#8A8A8A"
                android:layout_marginTop="2dp"/>
        </LinearLayout>



    </LinearLayout>

</LinearLayout>
