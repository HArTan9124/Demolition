<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D0D0D"
    android:padding="20dp"
    tools:context=".CustomAi">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:progress="33"
            android:max="100"
            android:progressTint="#00FFD9"
            android:backgroundTint="#222222"
            android:layout_marginBottom="26dp" />

        <!-- Header -->
        <TextView
            android:id="@+id/headerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Your AI Avatar"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:textStyle="bold"
            android:fontFamily="@font/spacemono"
            android:shadowColor="#00FFD9"
            android:shadowRadius="20"
            android:layout_marginBottom="20dp"/>

        <!-- Avatar Grid -->
        <GridLayout
            android:id="@+id/avatarGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:alignmentMode="alignMargins"
            android:useDefaultMargins="true"
            android:layout_marginBottom="30dp">

            <!-- Avatar Item Template -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardAvatar1"
                android:layout_width="170dp"
                android:layout_height="220dp"
                android:layout_margin="12dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardElevation="10dp"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/glass_bg"
                    android:padding="10dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/avatar1"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:src="@drawable/avatar1"
                        android:scaleType="centerCrop"
                        android:background="@drawable/avatar_selector"
                        android:clipToOutline="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Avatar 1"
                        android:textColor="#00FFD9"
                        android:textSize="16sp"
                        android:fontFamily="@font/spacemono"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Avatar 2 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardAvatar2"
                android:layout_width="170dp"
                android:layout_height="220dp"
                android:layout_margin="12dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardElevation="10dp"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/glass_bg"
                    android:padding="10dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/avatar2"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:src="@drawable/avatar2"
                        android:scaleType="centerCrop"
                        android:background="@drawable/avatar_selector"
                        android:clipToOutline="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Avatar 2"
                        android:textColor="#00FFD9"
                        android:textSize="16sp"
                        android:fontFamily="@font/spacemono"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Avatar 3 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardAvatar3"
                android:layout_width="170dp"
                android:layout_height="220dp"
                android:layout_margin="12dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardElevation="10dp"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/glass_bg"
                    android:padding="10dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/avatar3"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:src="@drawable/avatar3"
                        android:scaleType="centerCrop"
                        android:background="@drawable/avatar_selector"
                        android:clipToOutline="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Avatar 3"
                        android:textColor="#00FFD9"
                        android:textSize="16sp"
                        android:fontFamily="@font/spacemono"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Avatar 4 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardAvatar4"
                android:layout_width="170dp"
                android:layout_height="220dp"
                android:layout_margin="12dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardElevation="10dp"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/glass_bg"
                    android:padding="10dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/avatar4"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:src="@drawable/avatar4"
                        android:scaleType="centerCrop"
                        android:background="@drawable/avatar_selector"
                        android:clipToOutline="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Avatar 4"
                        android:textColor="#00FFD9"
                        android:textSize="16sp"
                        android:fontFamily="@font/spacemono"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Avatar 5 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardAvatar5"
                android:layout_width="170dp"
                android:layout_height="220dp"
                android:layout_margin="12dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardElevation="10dp"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/glass_bg"
                    android:padding="10dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/avatar5"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:src="@drawable/avatar5"
                        android:scaleType="centerCrop"
                        android:background="@drawable/avatar_selector"
                        android:clipToOutline="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Avatar 5"
                        android:textColor="#00FFD9"
                        android:textSize="16sp"
                        android:fontFamily="@font/spacemono"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <!-- Avatar 6 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardAvatar6"
                android:layout_width="170dp"
                android:layout_height="220dp"
                android:layout_margin="12dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="@android:color/transparent"
