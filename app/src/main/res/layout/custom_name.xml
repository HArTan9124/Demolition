<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/custom_ai_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D0D0D"
    android:fitsSystemWindows="true"
    tools:context=".CustomAi">

    <!-- Scrollable Main Container -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <!-- Progress Bar -->
            <ProgressBar
                android:id="@+id/progressbar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:max="100"
                android:progress="100"
                android:progressTint="#00FFD9"
                android:backgroundTint="#222222"
                android:layout_marginBottom="22dp" />

            <!-- Neon Header -->
            <TextView
                android:id="@+id/headerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ¤– Give Life to Your AI"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:fontFamily="@font/spacemono"
                android:textStyle="bold"
                android:shadowColor="#00FFD9"
                android:shadowRadius="20"
                android:gravity="center"
                android:layout_marginBottom="10dp" />

            <!-- Quote -->
            <TextView
                android:id="@+id/quoteText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€œAI is not just code â€” itâ€™s your imagination, expressed.â€"
                android:textColor="#9E9E9E"
                android:textSize="15sp"
                android:fontFamily="@font/spacemono"
                android:gravity="center"
                android:layout_marginBottom="28dp" />

            <!-- Avatar Glass Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/avatarCard"
                android:layout_width="280dp"
                android:layout_height="280dp"
                android:layout_marginBottom="26dp"
                android:layout_gravity="center"
                app:cardCornerRadius="140dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="18dp"
                app:cardBackgroundColor="@android:color/transparent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/glass_bg"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/selectedAvatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/avatar1"
                        android:scaleType="centerCrop"
                        android:background="@drawable/avatar_selector"
                        android:clipToOutline="true" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- AI Name Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name your AI"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="#00FFD9"
                app:hintTextColor="@color/white"
                app:boxStrokeWidth="2dp"
                android:layout_marginBottom="20dp"
                android:textColorHint="#AAAAAA">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextAiName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:padding="12dp"
                    android:fontFamily="@font/spacemono"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Save & Continue -->
            <Button
                android:id="@+id/btnSaveAiName"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Save / Continue âž¡ï¸"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/spacemono"
                android:textStyle="bold"
                android:textSize="18sp"
                android:background="@drawable/btn_next"
                android:layout_marginTop="10dp" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>
