<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background of card -->
    <solid android:color="#FFFFFF" />

    <!-- Rounded corners -->
    <corners android:radius="16dp" />

    <!-- Outer border -->
    <stroke
        android:width="1dp"
        android:color="#E5E5E5" />

    <!-- Inner spacing -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp" />
</shape>
