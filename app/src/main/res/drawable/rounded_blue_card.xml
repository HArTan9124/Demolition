<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#4A57E8" />

    <!-- Rounded corners -->
    <corners android:radius="20dp" />

    <!-- Optional shadow (works on API 21+) -->
    <padding android:top="12dp" android:bottom="12dp" android:left="12dp" android:right="12dp"/>

    <gradient
        android:startColor="#5B6BFA"
        android:endColor="#3547D6"
        android:angle="45" />

</shape>
