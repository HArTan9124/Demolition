<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#1F1B24" />

    <!-- Neon-style border -->
    <stroke
        android:width="2dp"
        android:color="#00FFD9" />

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Drop shadow (works better on higher API with elevation) -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp" />
</shape>
